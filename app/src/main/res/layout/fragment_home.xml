<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.turtle.yososuwhere.presentation.view.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:title="요소수 어디"
            app:menu="@menu/app_bar_home"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"/>

        <ImageView
            android:id="@+id/image_view_home_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_gps_fixed_24"
            app:layout_constraintTop_toBottomOf="@+id/topAppBar"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_home_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.currentLocation.address}"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/image_view_home_gps"
            app:layout_constraintTop_toTopOf="@+id/image_view_home_gps"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_home_gps"
            tools:text="충북 영동군 추풍령면 계룡리"/>

        <TextView
            android:id="@+id/tv_home_warning_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="업데이트: 14시(12시 기준 값), 20시(18시 기준 값)"
            android:layout_margin="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_home_gps" />

        <TextView
            android:id="@+id/tv_home_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="현재 위치에서 가장 가깝거나 재고가 많은 순으로 정렬됩니다."
            android:textColor="@color/turtle_main"
            android:layout_margin="12dp"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_warning_update" />

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/turtle_main"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_refresh"
            app:layout_constraintBottom_toTopOf="@+id/recyclerview_home_yososulist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_home_yososulist"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="5dp"
            android:scrollbarThumbVertical="@drawable/scroll_bar"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:spanCount="1"
            app:layout_constraintTop_toBottomOf="@+id/view_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/list_item_home_yososu"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>