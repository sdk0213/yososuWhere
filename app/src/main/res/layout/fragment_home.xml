<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.turtle.yososuwhere.presentation.view.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_home_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_gps_fixed_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_home_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치 정보를 불러오는 중입니다."
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/image_view_home_gps"
            app:layout_constraintTop_toTopOf="@+id/image_view_home_gps"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_home_gps"
            tools:text="충북 영동군 추풍령면 계룡리"/>

        <TextView
            android:id="@+id/tv_home_warning_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="업데이트: 14시(12시 기준값), 20시(16시 기준값)"
            android:layout_margin="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_home_gps" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_home_refresh"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="8dp"
            android:text="업데이트\n(+ 현재위치/재고량으로 기준 재정렬)"
            android:textColor="@color/turtle_main"
            android:onClick="@{() -> viewModel.getYososuStation()}"
            app:icon="@drawable/ic_baseline_refresh_24"
            app:iconGravity="textStart"
            app:iconTint="@color/turtle_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_warning_update"
            app:rippleColor="@color/turtle_main" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_home_yososulist"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="5dp"
            android:scrollbarThumbVertical="@drawable/scroll_bar"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:spanCount="1"
            app:layout_constraintTop_toBottomOf="@+id/btn_home_refresh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/list_item_home_yososu"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>