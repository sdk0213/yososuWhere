<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_dialog_show_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/view_normal_margin_top_and_bottom"
            android:layout_marginStart="@dimen/view_normal_margin_start_and_end"
            android:layout_marginEnd="@dimen/view_normal_margin_start_and_end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_dialog_show_text_view_ok"
            tools:text="내용이 삽입 됩니다."/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_show_text_view_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/common_button_checked"
            android:layout_marginTop="@dimen/view_normal_margin_top_and_bottom"
            android:layout_marginBottom="@dimen/view_normal_margin_top_and_bottom"
            android:layout_marginStart="@dimen/dialog_margin_start_and_end"
            android:layout_marginEnd="@dimen/dialog_margin_start_and_end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_show_text_view"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>